{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{> site-header}}

{{!-- The main content area --}}
<main id="site-main" class="site-main outer">
    <div class="container" id="the-box">

        <div class="row that-font">
            {{#foreach posts}}

                {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
                {{> "post-card"}}

            {{/foreach}}


            <div class="col-md-4 mt-2 mb-2  d-flex align-items-stretch">
            <div class="card">
                    <div class="card-body">
                        <h3 class="card-title"><a class="post-card-content-link" href="https://thiefmd.com/changeblog/">Looking for Update History?</a></h3>
                        <p>The Changeblog is still hosted on GitHub.</p>
                        <div class="btn-group">
                            <a href="https://github.com/kmwallio/ThiefMD/releases" title="Releases" class="btn btn-sm btn-primary">Releases</a>
                            <a href="https://github.com/kmwallio/ThiefMD" title="Releases" class="btn btn-sm btn-primary">Source Code</a>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </div>

    </div>
</main>
